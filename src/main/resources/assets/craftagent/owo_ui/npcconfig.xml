<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical" id="panel">
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>

                        <children>

                            <!-- Title / name row -->
                            <flow-layout direction="vertical" id="npcNameRow">
                                <children>
                                    <label id="npcName-label">
                                        <shadow>true</shadow>
                                    </label>
                                </children>
                            </flow-layout>

                            <!-- LLM type row (buttons injected from code) -->
                            <flow-layout direction="vertical" id="llmTypeRow">
                                <children>
                                    <label id="llmType-label">
                                        <shadow>true</shadow>
                                    </label>
                                </children>
                            </flow-layout>

                            <!-- LLM model row (input injected from code) -->
                            <flow-layout direction="vertical" id="llmModelRow">
                                <children>
                                    <label id="llmModel-label">
                                        <shadow>true</shadow>
                                    </label>
                                </children>
                            </flow-layout>

                            <!-- Gender row (dropdown injected from code) -->
                            <flow-layout direction="vertical" id="genderRow">
                                <children/>
                            </flow-layout>

                            <!-- Age row (input injected from code) -->
                            <flow-layout direction="vertical" id="ageRow">
                                <children/>
                            </flow-layout>

                            <!-- LLM info rows (url + system prompt injected from code) -->
                            <flow-layout direction="vertical" id="llmInfo">
                                <children/>
                            </flow-layout>

                            <!-- Save last -->
                            <button id="save">
                                <text>Save</text>
                            </button>

                        </children>

                        <margins>
                            <all>11</all>
                        </margins>
                        <gap>7</gap>

                        <horizontal-alignment>left</horizontal-alignment>
                        <vertical-alignment>top</vertical-alignment>

                        <surface>
                            <panel dark="true"/>
                        </surface>
                    </flow-layout>

                    <sizing>
                        <horizontal method="fill">80</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>
                </scroll>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
