<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>

                <scroll direction="vertical">
                    <!-- ONE component child only -->
                    <flow-layout direction="vertical" id="panel">
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="content"/>
                        </sizing>

                        <children>
                            <!-- Inner padded container -->
                            <flow-layout direction="vertical" id="content">
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="content"/>
                                </sizing>

                                <children>

                                    <flow-layout direction="vertical" id="npcNameRow">
                                        <sizing><horizontal method="fill">100</horizontal></sizing>
                                        <children>
                                            <label id="npcName-label"><shadow>true</shadow></label>
                                        </children>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="llmTypeRow">
                                        <sizing><horizontal method="fill">100</horizontal></sizing>
                                        <children>
                                            <label id="llmType-label"><shadow>true</shadow></label>
                                        </children>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="llmModelRow">
                                        <sizing><horizontal method="fill">100</horizontal></sizing>
                                        <children>
                                            <label id="llmModel-label"><shadow>true</shadow></label>
                                        </children>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="genderRow">
                                        <sizing><horizontal method="fill">100</horizontal></sizing>
                                        <children/>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="ageRow">
                                        <sizing><horizontal method="fill">100</horizontal></sizing>
                                        <children/>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="llmInfo">
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                            <vertical method="content"/>
                                        </sizing>
                                        <children/>
                                    </flow-layout>

                                    <button id="save">
                                        <text>Save</text>
                                    </button>

                                </children>

                                <!-- padding belongs here now (NOT on panel) -->
                                <margins>
                                    <top>16</top>
                                    <left>16</left>
                                    <bottom>16</bottom>
                                    <right>24</right>
                                </margins>

                                <gap>7</gap>
                                <horizontal-alignment>left</horizontal-alignment>
                                <vertical-alignment>top</vertical-alignment>
                            </flow-layout>
                        </children>

                        <horizontal-alignment>center</horizontal-alignment>
                        <vertical-alignment>top</vertical-alignment>

                        <surface>
                            <panel dark="true"/>
                        </surface>
                    </flow-layout>

                    <!-- Scroll viewport size (80% screen) -->
                    <sizing>
                        <horizontal method="fill">80</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>
                </scroll>

            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
